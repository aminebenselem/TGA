<!-- res/drawable/card_background.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background color for the card -->
    <solid android:color="#FFFFFF" /> <!-- White background; change if needed -->

    <!-- Rounded corners for the card -->
    <corners android:radius="8dp" /> <!-- Adjust radius for more or less rounding -->

    <!-- Padding inside the card -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />

    <!-- Optional shadow effect (works well on some devices) -->
    <size android:width="250dp" android:height="150dp" /> <!-- Setting the minimum size of the card-->
</shape>
